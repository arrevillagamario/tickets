@model RegistrarUsuarioViewModel
@{
    ViewData["Title"] = "Usuarios Externos";
}

<div class="flex justify-center items-center w-full h-full">
    <div class="w-full max-w-4xl bg-custom p-8 rounded shadow-md">
        <h2 class="text-3xl font-bold mb-6 text-center text-white">Registrar Usuario Externo</h2>
        <form asp-action="Externo" method="POST" class="grid grid-cols-2 gap-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="NombreUsuario" class="block text-gray-700 text-sm font-bold mb-2 text-white">Nombre</label>
                <input asp-for="NombreUsuario" type="text" class="shadow text-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Nombre">
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2 text-white">Email</label>
                <input asp-for="Email" type="email" class="shadow text-sm  appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Contrasena" class="block text-gray-700 text-sm font-bold mb-2 text-white">Contraseña</label>
                <input asp-for="Contrasena" type="password"  class="shadow text-sm  appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Contraseña">
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Telefono" class="block text-gray-700 text-sm font-bold mb-2 text-white">Telefono</label>
                <input asp-for="Telefono" type="teléfono" class="shadow text-sm  appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Teléfono">
                <span asp-validation-for="Telefono"></span>
            </div>
            <div>
                <label asp-for="Empresa" class="block text-gray-700 text-sm font-bold mb-2 text-white">Empresa</label>
                <input asp-for="Empresa" type="text"  class="shadow text-sm  appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Empresa">
                <span asp-validation-for="Empresa"></span>
            </div>
            <div class="col-span-2 flex items-center justify-center">
                <button type="submit" class="bg-button hover:bg-teal-700 text-white font-bold py-2 px-4 text-sm  rounded focus:outline-none focus:shadow-outline">
                    Sign Up
                </button>
            </div>
        </form>
    </div>
</div>
